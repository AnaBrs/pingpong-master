<h1 class='page-header'>Log Game</h1>

<div class="log-form">
  <%= form_for [@game] do |f| %>
    <div class="field">
      <%= f.label :game_date, "Date played:" %><br>
      <%= f.date_select :game_date %>
    </div>
    <div class="field">
      <%= f.label :opponent, "Opponent" %><br>
      <%= f.collection_select :opponent, @opponents, :id, :email, include_blank: true %>
    </div>
    <div class="field">
      <%= f.label :home_score, "Your Score" %><br>
      <%= f.text_field :home_score %>
    </div>
    <div class="field">
      <%= f.label :opponent_score, "Their Score" %><br>
      <%= f.text_field :opponent_score %>
    </div>
    <div class="actions">
      <%= f.submit "Save" %>
    </div>
    <!-- <div class="actions">
      <%= f.submit "Cancel" %>
    </div> -->
  <% end %>
</div>

