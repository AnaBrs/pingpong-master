<h1 class='page-header'>History</h1>
<div class="history-table">
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Opponent</th>
        <th>Score</th>
        <th>Result</th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game[:game_date].strftime("%b %d") %></td>
          <td><%= game[:opponent][:email] %></td>
          <td><%= game[:home_score] %> - <%= game[:opponent_score] %></td>
          <td><%= winner_result(game[:home_score], game[:opponent_score]) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
